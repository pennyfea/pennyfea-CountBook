<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pennyfea.countbook.EditValue">

    <EditText
        android:id="@+id/initialValue"
        android:layout_width="251dp"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:hint="@string/inital_val"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/intial_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="@string/send_inital_value"
        android:text="@string/send_inital_value"
        app:layout_constraintBaseline_toBaselineOf="@+id/initialValue"
        app:layout_constraintLeft_toRightOf="@+id/initialValue"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
